<% if current_user.active_applications.any? %>
  <div class="col-lg-6">
    <div class="padded">
      <h1 class="center"><%= t('competition.user_side.your_applications')%></h1>

      <table class="table">
        <thead>
        <tr>
          <th><%= t('ticketing.user_side.convention')%></th>
          <th><%= t('competition.competition_name')%></th>
          <th><%= t('ticketing.status')%></th>
          <th></th>
        </tr>
        </thead>

        <% comp_applications = current_user.active_applications %>
        <%= render comp_applications %>

      </table>
    </div>
  </div>

<% end %>
