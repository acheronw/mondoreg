<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">


    <%= link_to t('title.home'), root_path, id: "logo" %>


    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% root_product_category = ProductCategory.first %>
          <%= link_to "WEBSHOP", root_product_category  %>
        </li>

        <% if user_signed_in? && current_user.has_role?(:bursar) %>
            <li><%= link_to t('title.ticket_admin'), ticket_orders_path %></li>
        <% end %>

        <% if user_signed_in? && current_user.has_role?(:bursar) %>
            <li><%= link_to t('title.ticket_stats'), ticket_stats_path %></li>
        <% end %>


        <li><%= link_to t('title.help'),   help_path %></li>
        <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to t('title.user_profile'), edit_user_registration_path %></li>
                <li><%= link_to t('title.log_out'), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <li>
              <%= link_to "KOSAR", current_user.orders.last %>
            </li>
        <% else %>
            <li><%= link_to t('title.login'), new_user_session_path %></li>
            <li><%= link_to t('title.signup'), new_user_registration_path %></li>
        <% end %>
        <li><%= language_changer %> </li>
      </ul>
    </nav>
  </div>
</header>
