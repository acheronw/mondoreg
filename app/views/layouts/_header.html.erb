<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">

    <% if user_signed_in? %>
        <%= link_to t('title.home'), hub_path, id: "logo" %>
    <% else %>
        <%= link_to t('title.home'), root_path, id: "logo" %>
    <% end %>

    <nav>
      <ul class="nav navbar-nav navbar-right">


        <li><%= link_to t('title.help'),   help_path %></li>
        <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to t('title.user_profile'), edit_user_registration_path %></li>
                <li><%= link_to t('title.log_out'), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            </li>
        <% else %>
            <li><%= link_to t('title.login'), new_user_session_path %></li>
            <li><%= link_to t('title.signup'), new_user_registration_path %></li>
        <% end %>
        <li><%= language_changer %> </li>
      </ul>
    </nav>
  </div>
</header>
