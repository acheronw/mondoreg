<% provide(:title, t('title.home')) %>

<% if user_signed_in? %>

    <% if current_user.privacy_accepted %>
      <%= render 'hub' %>
    <% else %>
      <div class="padded well">
        <%= t('privacy_consent_warning_html') %>
      </div>
    <% end %>

<% else %>

    <%= render 'welcome_splash' %>

<% end %>
