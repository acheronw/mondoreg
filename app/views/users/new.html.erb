<% provide(:title, t('title.register')) %>
<h1><%= t('user.signup') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, t('user.name') %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, t('user.email') %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, t('user.password') %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, t('user.password_conf') %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit t('user.submit_new_user'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>